<%- include("../partials/top"); %>

<div class="container">
    <h1 class="text-center mb-4">Edit comment</h1>
    <form class="mx-auto my-3 w-50" action="/campgrounds/<%= campground_id %>/comments/<%= comment.id %>?_method=PUT" method="post">
        <div class="form-group">
            <textarea class="form-control"name="comment[text]" rows="10" cols="30"><%= comment.text %></textarea>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary btn-block">Submit</button>
        </div>
    </form>
</div>

