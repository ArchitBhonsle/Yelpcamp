<%- include("../partials/top"); %>

<div class="container">
    <h1 class="text-center mb-4">Add New Comment to <%= campground.name %></h1>
    <form class="mx-auto my-3 w-50" action="/campgrounds/<%= campground.id %>/comments" method="post">
        <div class="form-group">
            <textarea class="form-control"name="comment[text]" placeholder="Comment" rows="10" cols="30"></textarea>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary btn-block">Submit</button>
        </div>
    </form>
</div>

